<% provide(:title, "Log in") %>

<div class="page-content">
    <h1>Log in</h1>
    <main class="mdl-layout__content login-form">
        <div class="mdl-card mdl-shadow--6dp">
            <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                <h2 class="mdl-card__title-text">Login</h2>
            </div>
            <div class="mdl-card__supporting-text">
                <%= form_for(:session, url: login_path) do |f| %>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.label :email, class: 'mdl-textfield__label' %>
                        <%= f.email_field :email, class: 'mdl-textfield__input' %>
                    </div>
                
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.label :password, class: 'mdl-textfield__label' %>
                        <%= link_to "(forgot password)", new_password_reset_path, class: 'mdl-navigation__link' %>
                        <%= f.password_field :password, class: 'mdl-textfield__input' %>
                    </div>
                    <%= f.label :remember_me, class: "mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect", for: 'checkbox-1' do %>
                <%= f.check_box :remember_be, class: "mdl-checkbox__input", id: 'checkbox-1' %>
                        <span>Remember me</span>
                    <% end %>

                    <%= f.submit "Log in", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
                <% end %>

                <p>New user? <%= link_to "Sign up now!", signup_path %></p>
            </div>
        </div>
    </main>
</div>