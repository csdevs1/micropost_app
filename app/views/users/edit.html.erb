<% provide(:title, "Edit User") %>
<div class="page-content">
    <main class="mdl-layout__content">
        <h1>Update</h1>
        <div class="mdl-card mdl-shadow--6dp">
            <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                <h2 class="mdl-card__title-text"></h2>
            </div>
            <div class="mdl-card__supporting-text">                
                <%= form_for(@user) do |f| %>
                    <%= render 'shared/error_messages' %>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.text_field :name, class: "mdl-textfield__input" %>
                        <%= f.label :name, class: "mdl-textfield__label" %>
                    </div>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.email_field :email, class: "mdl-textfield__input" %>
                        <%= f.label :email, class: "mdl-textfield__label" %>
                    </div>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.text_field :username, class: "mdl-textfield__input" %>
                        <%= f.label :username, class: "mdl-textfield__label" %>
                    </div>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.password_field :password, class: "mdl-textfield__input" %>
                        <%= f.label :password, class: "mdl-textfield__label" %>
                    </div>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
                        <%= f.label :password_confirmation, "Confirmation", class: "mdl-textfield__label" %>        
                    </div>

                <%= f.submit "Submit your changes", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
                <% end %>
                <div class="gravatar_edit">
                    <%= gravatar_for @user %>
                    <a href="http://gravatar.com/emails" target="_blank" class="mdl-navigation__link">Change your profile image</a>
                </div>
            </div>
        </div>
    </main>
</div>