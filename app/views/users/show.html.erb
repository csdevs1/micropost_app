<% provide(:title, @user.name) %>
<main class="mdl-layout__content mdl-color--grey-100 main-content">
    <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
    </h1>
    
    <div class="col-md-8">
        <% if @user.microposts.any? %>
            <h3>Microposts (<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
            <%= will_paginate @microposts %>
        <% end %>
    </div>
    
</main>