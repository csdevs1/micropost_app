<% provide(:title, "Sign Up") %>
<div class="page-content">
    <main class="mdl-layout__content">
        <h1>Sign Up</h1>
        <div class="mdl-card mdl-shadow--6dp">
            <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                <h2 class="mdl-card__title-text"></h2>
            </div>
            <div class="mdl-card__supporting-text">                
                <%= form_for(@user) do |f| %>
                    <%= render 'shared/error_messages', object: f.object  %>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">        
                        <%= f.text_field :name, class: "mdl-textfield__input" %>
                        <%= f.label :name, class: "mdl-textfield__label" %>
                        
                    </div>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.email_field :email, class: "mdl-textfield__input", pattern: '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$' %>
                        <%= f.label :email, class: "mdl-textfield__label" %>
                        <span class="mdl-textfield__error">Insert a valid email, please!</span>
                    </div>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.text_field :username, class: "mdl-textfield__input", pattern: '[A-Za-z0-9\S]{1,25}' %>
                        <%= f.label :username, class: "mdl-textfield__label" %>
                        <span class="mdl-textfield__error">No spaces, please!</span>
                    </div>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.password_field :password, class: "mdl-textfield__input" %>
                        <%= f.label :password, class: "mdl-textfield__label" %>
                    </div>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
                        <%= f.label :password_confirmation, "Confirmation", class: "mdl-textfield__label" %>        
                    </div>

                    <%= f.submit "Create my account", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
                <% end %>
            </div>
        </div>
    </main>
</div>