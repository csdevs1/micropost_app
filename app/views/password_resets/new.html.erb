<% provide(:title, "Forgot Password") %>

<div class="page-content">
    <h1>Forgot password</h1>
    <main class="mdl-layout__content login-form">
        <div class="mdl-card mdl-shadow--6dp">
            <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                <h2 class="mdl-card__title-text"></h2>
            </div>
            <div class="mdl-card__supporting-text">
                <%= form_for(:password_reset, url: password_resets_path) do |f| %>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.label :email, class: 'mdl-textfield__label' %>
                        <%= f.email_field :email, class: 'mdl-textfield__input' %>
                    </div>
                    <%= f.submit "Submit", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
                <% end %>
            </div>
        </div>
    </main>
</div>