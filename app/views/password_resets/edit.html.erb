<% provide(:title, "Edit User") %>
<div class="page-content">
    <main class="mdl-layout__content">
        <h1>Reset Password</h1>
        <div class="mdl-card mdl-shadow--6dp">
            <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                <h2 class="mdl-card__title-text"></h2>
            </div>
            <div class="mdl-card__supporting-text">                
                <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
                    <%= render 'shared/error_messages', object: f.object  %>

                    <%= hidden_field_tag :email, @user.email %>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.password_field :password, class: "mdl-textfield__input" %>
                        <%= f.label :password, class: "mdl-textfield__label" %>
                    </div>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
                        <%= f.label :password_confirmation, "Confirmation", class: "mdl-textfield__label" %>        
                    </div>

                <%= f.submit "Update password", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
                <% end %>
            </div>
        </div>
    </main>
</div>